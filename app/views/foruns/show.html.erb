<div class="d-flex flex-column container">
  <div class="d-flex flex-column container">
    <%= render @forun %>
    
    <div class = "d-flex ms-auto">
      <%= link_to "Back to home", "/", class:"btn btn-outline-secondary mt-3" %>
      <% if Current.user.id == @forun.id_owner%>
        <%= button_to "Destroy this forum", @forun, method: :delete, class:"btn btn-outline-danger mt-3"%>
      <% end %>  
    </div>
    <br>
    <div class="d-flex flex-column container">
      <%if @var %>
        <div class = "d-flex ">
          <div class = "ms-auto">
            <%= render "posts/form"%>
          </div>
          <div class = "ms-auto">
            <% if Current.user.id != @forun.id_owner%>
              <%= render "joins/form_leave" , :forun => @forun %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class = "ms-auto">
        <%if !@var %>
          <%= render "joins/form" , :forun => @forun %>
        <% end %>
      </div>
      <div class="d-flex flex-column container" style = "width: 50%">
        <% @forun.posts.each do |post| %>
          <%if post != nil && post.id%>
            <%= render post %>
            <div class = "ms-auto">
              <%= link_to "Go to", post , class:"btn btn-outline-primary mt-4"%>
            </div>
          <% end %>
          <br>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
