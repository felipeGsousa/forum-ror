<div class="d-flex container justify-content-center">
  <%= form_with url:sign_in_path do |form|%>
    <div class="d-flex container justify-content-center mt-auto p-2">
      <h1>Sign In</h1>
    </div>
    <div class="mt-auto p-2">
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class:"form-control"%>
    </div>

    <div class="mt-auto p-2">
      <%= form.label :password, style: "display: block" %>
      <%= form.password_field :password, class:"form-control" %>
    </div>

    <div class="d-flex container justify-content-center justify-content-evenly  mt-auto p-2">
      <%= form.submit "Sign In", class:"btn btn-outline-primary"%>
      <%= link_to "Or Sign Up", "/sign_up" %>
    </div>
  <% end %>
</div>